<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Matomo Analytics Test" %></title>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <%= javascript_include_tag "site" %>
  </head>
  <body class="flex min-h-screen text-gray-900 text-sm">
    <div class="flex flex-col w-48 px-6 py-4">
      <nav class="">
        <ul class="">
          <li><a href="/" class="text-purple-700 hover:underline">Home</a></li>
        </ul>
      </nav>
    </div>

    <main class="px-6 py-4 bg-gray-100 w-full">
      <h1 class="text-lg"><%= current_page.data.title %></h1>
      <%= yield %>
    </main>
  </body>
</html>
